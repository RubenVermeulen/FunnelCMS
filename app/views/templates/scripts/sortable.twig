<script>
    $( function() {
        $( "#sortable" ).sortable({
            helper: fixWidthHelper,
            containment: 'parent',
            tolerance: 'pointer',
        });
        $( "#sortable" ).disableSelection();

        function fixWidthHelper(e, ui) {
            ui.children().each(function() {
                $(this).width($(this).width());
            });
            return ui;
        }
    });
</script>