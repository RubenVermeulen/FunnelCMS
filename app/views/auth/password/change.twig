{% extends 'templates/default.twig'%}

{% block title %}Change wijzigen{% endblock %}
{% block pageTitle %}Wachtwoord wijzigen{% endblock %}

{% block content %}
    <form action="{{ urlFor('auth.password.change.post') }}" method="post" autocomplete="off">
        <div class="form-group">
            <label for="password_old">Oud wachtwoord</label>
            <input type="password" name="password_old" id="password_old" class="form-control"/>
            {% include 'errors/field.twig' with {'field': 'password_old'} %}
        </div>
        <div class="form-group">
            <label for="password">Nieuw wachtwoord</label>
            <input type="password" name="password" id="password" class="form-control"/>
            {% include 'errors/field.twig' with {'field': 'password'} %}
        </div>
        <div class="form-group">
            <label for="password_confirm">Wachtwoord bevestigen</label>
            <input type="password" name="password_confirm" id="password_confirm" class="form-control"/>
            {% include 'errors/field.twig' with {'field': 'password_confirm'} %}
        </div>
        <div class="form-group">
            <input type="submit" value="Wijzigen" class="btn btn-primary form-control"/>
        </div>

        <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}"/>
    </form>
{% endblock %}