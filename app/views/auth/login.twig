{% extends 'templates/default.twig' %}

{% block title %}Inloggen{% endblock %}
{% block pageTitle %}Inloggen{% endblock %}

{% block content %}
    <form action="{{ urlFor('login.post') }}" method="post" autocomplete="off">
        <div class="form-group">
            <label for="identifier">Gebruikersnaam/ e-mailadres</label>
            <input type="text" name="identifier" id="identifier" class="form-control"/>
            {% include 'errors/field.twig' with {'field': 'identifier'} %}
        </div>
        <div class="form-group">
            <label for="password">Wachtwoord</label>
            <input type="password" name="password" id="password" class="form-control"/>
            {% include 'errors/field.twig' with {'field': 'password'} %}
        </div>
        <div class="form-group">
            <input type="checkbox" name="remember" id="remember"/> <label for="remember">Ingelogd blijven</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Inloggen" class="btn btn-primary form-control"/>
        </div>
        <div class="form-group">
            <a href="{{ urlFor('auth.password.recover') }}">Wachtwoord vergeten?</a>
        </div>

        <input type="hidden" name="{{ csrf_key }}" value="{{ csrf_token }}"/>
    </form>
{% endblock %}



