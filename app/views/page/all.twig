{% extends 'templates/default.twig'%}

{% block title %}Pagina's{% endblock %}
{% block pageTitle %}Pagina's{% endblock %}

{% block content %}
    <div class="row toolbar">
        <div class="col-md-4 col-sm-6">
            <a href="{{ urlFor('page.create') }}" class="btn btn-primary">Nieuw</a>
            <a href="#" id="sort-pages" class="btn btn-primary">Wijzig volgorde</a>
        </div>
        <div class="col-md-8 col-sm-6">
            {% include 'templates/partials/searchForm.twig' with {'url': urlFor('page.search')} only %}
        </div>
    </div>

    {% if items is empty %}
        {% if searchCount is defined and searchCount == 0 %}
            <p>Er zijn geen resultaten gevonden voor je zoekopdracht "<strong>{{ keyword }}</strong>".</p>
        {% else %}
            <p>Er zijn nog geen pagina's.</p>
        {% endif %}
    {% else %}
        {% if searchCount is defined %}
            <p>Er zijn <strong>{{ searchCount }}</strong> resultaten gevonden voor je zoekopdracht "<strong>{{ keyword }}</strong>".</p>
        {% endif %}

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Naam</th>
                    <th>Zichtbaar</th>
                    <th>Aangemaakt op</th>
                    <th>Laatst gewijzigd op</th>
                    <th>Actie</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.name }}</td>

                        {% if item.is_visible %}
                            <td class="success">Ja</td>
                        {% else %}
                            <td class="danger">Nee</td>
                        {% endif %}

                        <td>{{ item.getCreatedAt }}</td>
                        <td>{{ item.getUpdatedAt }}</td>
                        <td>
                            {% if item.is_locked == false %}
                                <a href="{{ urlFor('page.edit', {id: item.id}) }}" title="Wijzigen">Wijzigen</a>
                            {% else %}
                                <span title="Je kan deze pagina niet wijzigen">Vergrendeld</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

                <tr>
                    <th>Naam</th>
                    <th>Zichtbaar</th>
                    <th>Aangemaakt op</th>
                    <th>Laatst gewijzigd op</th>
                    <th>Actie</th>
                </tr>
            </table>
        </div>

        {#Pagination#}
        {% include 'templates/partials/pagination.twig' with {'routeName': 'page.all.page','pages': pages, 'page': page} only %}
        <br><br>

        <div id="sort-modal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Wijzig volgorde</h4>
                    </div>
                    <div class="modal-body">
                        <p class="alert alert-info">Versleep de namen om de volgorde te wijzigen.</p>
                        <div style="max-height: 500px; overflow-x:hidden;">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th>Naam</th>
                                </tr>
                                </thead>
                                <tbody id="sortable">
                                {% for item in items %}
                                    <tr>
                                        <td data-id="{{ item.id }}">{{ item.name }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="confirm" type="button" class="btn btn-primary">Opslaan</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Annuleer</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>

    {% include 'templates/scripts/sortable.twig' %}
    {% include 'templates/scripts/page.all.twig' %}
{% endblock %}

